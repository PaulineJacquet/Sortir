{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} - Mot de passe{% endblock %}

{% block h1 %}Changez votre mot de passe{% endblock %}

{% block body %}
    {% form_theme formMdp 'bootstrap_5_layout.html.twig' %}
    <div class="d-flex justify-content-center align-items-center container">
        <div class="col-auto">
            {{ form_start(formMdp) }}
            {% for type, messages in app.session.flashbag.all() %}
                {% for message in messages %}
                    <div class="alert alert-{{ type }} alert-dismissible fade show" role="alert">
                        {{ message }}
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                {% endfor %}
            {% endfor %}
            {{ form_row(formMdp.currentPassword) }}
            {{ form_row(formMdp.plainPassword.first) }}
            {{ form_row(formMdp.plainPassword.second) }}
            <div class="text-center">
                <input type="submit" class="customBTN d-inline-block" value="Modifier">
                <a class="customBTNred d-inline-block" href="{{ path('app_mon_profil') }}">Annuler</a>
            </div>
            {{ form_end(formMdp) }}
        </div>
    </div>
{% endblock %}