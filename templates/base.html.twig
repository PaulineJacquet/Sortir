<!doctype html>
<html lang="fr">

<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>{% block title %}NightOwl{% endblock %}</title>

    {# BOOTSTRAP CSS #}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ" crossorigin="anonymous">
</head>

<body>

    <header>

        {# NAVIGATION #}
        <nav class="navbar navbar-expand-lg navbar-light bg-primary">
            <a class="navbar-brand text-white" href="#">NightOwl</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse text-white" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item active">
                        <a class="nav-link text-white" href="#">Accueil</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" href="#">Villes</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" href="#">Sites</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" href="#">Mon profil</a>
                    </li>
                    {% if app.user %}
                        <li class="nav-item">
                            <a class="nav-link text-white" href="#">Se déconnecter</a>
                        </li>
                    {% else %}
                        <li class="nav-item">
                            <a class="nav-link text-white" href="#">Se connecter</a>
                        </li>
                    {% endif %}

                </ul>
            </div>
        </nav>

    </header>

    <main>
        <div class="jumbotron jumbotron-fluid">
            <div class="container">
                <h1 class="display-4">{% block h1 %}{% endblock %}</h1>
            </div>
        </div>
        <div class="container">
            {% block main %}{% endblock %}
        </div>
    </main>

    <footer class="text-center text-white bg-secondary">

        <div class="container">

            <section class="mt-5 mb-5">

                <div class="row text-center d-flex justify-content-center pt-5">

                    <div class="col-md-2">
                        <h6 class="text-uppercase font-weight-bold">
                            <a href="#!" class="text-white text-decoration-none">Accueil</a>
                        </h6>
                    </div>

                    <div class="col-md-2">
                        <h6 class="text-uppercase font-weight-bold">
                            <a href="#!" class="text-white text-decoration-none">Villes</a>
                        </h6>
                    </div>

                    <div class="col-md-2">
                        <h6 class="text-uppercase font-weight-bold">
                            <a href="#!" class="text-white text-decoration-none">Sites</a>
                        </h6>
                    </div>

                    <div class="col-md-2">
                        <h6 class="text-uppercase font-weight-bold">
                            <a href="#!" class="text-white text-decoration-none">Mon profil</a>
                        </h6>
                    </div>

                </div>

            </section>

        </div>

        <div class="text-center pb-3 pt-4 bg-primary">
            <p class="text-white">© 2023 Copyright : NightOwl</p>
        </div>
    </footer>

    {# BOOTSTRAP JS #}
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ENjdO4Dr2bkBIFxQpeoTz1HIcje39Wm4jDKdf19U8gI4ddQ3GYNS7NTKfAdVQSZe" crossorigin="anonymous"></script>
    {% block script %}{% endblock %}

</body>

</html>
